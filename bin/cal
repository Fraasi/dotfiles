#!/usr/bin/env python

import calendar
from datetime import datetime, date
import os


# https://github.com/python/cpython/issues/84315
os.system("") # Comment this out to disable ANSI codes

class colors:
    RESTORE='\033[0m'
    CYAN='\033[00;36m'

currentDay = datetime.now().day
currentMonth = datetime.now().month
currentYear = datetime.now().year
cal = calendar.month(currentYear, currentMonth)

splt = cal.rsplit(str(currentDay), 1)
frmat = f"{colors.CYAN}{currentDay}{colors.RESTORE}".join(splt)

print(frmat, end = '')

