#!/usr/bin/env bash

app_id=$WOLFRAM_APP_ID
modes="simple | spoken | result"
mode="result"
base_url="https://api.wolframalpha.com/v1/$mode"
question="$*"

curl --data "appid=$app_id" --data-urlencode "i=$question" "$base_url"


