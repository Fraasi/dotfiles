{
  // new window pos/size
  "window.openFoldersInNewWindow": "default",
  "window.newWindowDimensions": "inherit",
  "window.title": "${rootName}${separator}${folderPath}${separator} -\\- ${separator}${activeEditorMedium} ${dirty}",
  "window.menuBarVisibility": "compact",
  // workbench
  "workbench.iconTheme": "vscode-icons",
  "workbench.editor.untitled.hint": "hidden",
  "workbench.editor.closeOnFileDelete": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.statusBar.visible": true,
  "workbench.activityBar.visible": true,
  "workbench.colorTheme": "Monokai",
  // colour customization
  "workbench.colorCustomizations": {
    "terminal.foreground": "#6eff5e",
    "tab.inactiveBackground": "#272822", //"#414339"
    "tab.activeBackground": "#414339", // "#272822"
    "tab.activeBorder": "#f5db19",
    "editorIndentGuide.activeBackground": "#f5db19",
    "editorBracketMatch.border": "#515151",
    "editorBracketMatch.background": "#515151",
  },
  // terminal
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.copyOnSelection": true,
  // editor
  "editor.guides.bracketPairs": "active",
  "editor.acceptSuggestionOnEnter": "off",
  "editor.suggest.localityBonus": true,
  "editor.minimap.enabled": true,
  "editor.scrollBeyondLastLine": false,
  "editor.wordWrap": "on",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true,
  },
  "editor.quickSuggestionsDelay": 10,
  // "editor.multiCursorModifier": "ctrlCmd",
  "editor.hover.enabled": true,
  "editor.hover.delay": 1000,
  "editor.hover.sticky": true,
  "editor.fontSize": 15,
  // tab indentation
  "editor.detectIndentation": false,
  "editor.cursorSurroundingLines": 2,
  "editor.tabSize": 2,
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.suggestOnTriggerCharacters": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.bracketPairColorization.enabled": true,
  "diffEditor.ignoreTrimWhitespace": true,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  // emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  // eslint
  "eslint.alwaysShowStatus": true,
  // explorer
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  // from file-tree
  "files.exclude": {
    "**/node_modules": true,
    "**/package-lock.json": true
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.eol": "\n",
  "search.exclude": {
    "**/build": true,
    "**/docs": true,
    "*lock": true
  },
  "files.associations": {
    ".env": "plaintext"
  },
  // terminal
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.external.windowsExec": "C:\\Program Files\\Git\\usr\\bin\\bash.exe",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.profiles.windows": {
    "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe (migrated)": {
      "path": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
      "args": []
    }
  },
  // extensions
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "extensions.ignoreRecommendations": true,
  "tabnine.experimentalAutoImports": true,
  "sync.quietSync": false,
  "sync.gist": "6e085a524768436a4ab548b0859e1c83",
  "docthis.includeDescriptionTag": true,
  "vsicons.dontShowNewVersionMessage": true,
  "liveServer.settings.donotShowInfoMsg": true,
  // vscode
  "telemetry.telemetryLevel": "error",
  "window.commandCenter": true,
  "breadcrumbs.enabled": true,
  // "git.mergeEditor": true,
  // markdown
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  // python
  "[python]": {
    "editor.detectIndentation" : false,
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  // css
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  // javascript
  "[javascript]": { },
  "javascript.suggest.completeFunctionCalls": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.stickyScroll.enabled": true,
}
